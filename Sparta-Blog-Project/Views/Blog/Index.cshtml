@using Sparta_Blog_Project.Models
@{
    ViewBag.Title = "Index";
}

<h2>Blog Feed</h2>

@using (var ctx = new ApplicationDbContext())
{
    foreach (var blog in ctx.Blogs)
    {
        <div class="panel panel-body">
            <h3>
                 @blog.Title
            </h3>
            Author | @blog.Author

                <a href="@Url.Action("Show", "Blog", new { @id=blog.Id})">
                    Read More...
                </a>
        </div>
    }
}