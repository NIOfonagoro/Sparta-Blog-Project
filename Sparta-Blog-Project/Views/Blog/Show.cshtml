@using Sparta_Blog_Project.Models
@{
    ViewBag.Title = "Show";
}

<h2>Show</h2>

@using (var ctx = new ApplicationDbContext())
{
    var blog = ctx.Blogs.Find(Convert.ToInt32(Url.RequestContext.RouteData.Values["id"]));

    <h1 class="text-center">
        @blog.Title
    </h1>

    <h6 class="text-center" style="padding-bottom: 10px;">
        Author | @blog.Author
    </h6>
    
    <div class="container">
        @blog.Content
    </div>
}